&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL
&ATOM
  ELEMENT Ar

  RUN_TYPE ENERGY

  ELECTRON_CONFIGURATION 1s2 2s2 2p6 3s2 3p6 
  MAX_ANGULAR_MOMENTUM 1

  &METHOD
    METHOD_TYPE  KOHN-SHAM
    &XC
      &XC_FUNCTIONAL PBE0
      &END XC_FUNCTIONAL
    &END XC
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-12
  &END 

  &AE_BASIS
    BASIS_TYPE SLATER
    NUM_SLATER 3 2 0 0
    S_EXPONENTS  17.5075 6.1152 2.5856
    S_QUANTUM_NUMBERS 1 2 3
    P_EXPONENTS  7.0041 2.2547
    P_QUANTUM_NUMBERS  2 3
  &END AE_BASIS

&END ATOM
