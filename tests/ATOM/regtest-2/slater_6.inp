&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL
&ATOM
  ELEMENT C

  RUN_TYPE PSEUDOPOTENTIAL_OPTIMIZATION

  ELECTRON_CONFIGURATION  [He] 2s2 2p2
  CORE [He]
  MAX_ANGULAR_MOMENTUM 2

  &METHOD
     METHOD_TYPE  KOHN-SHAM
     RELATIVISTIC DKH(2)
     &XC
       &XC_FUNCTIONAL PBE
       &END XC_FUNCTIONAL
     &END XC
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-6
  &END
  &PRINT
    &BASIS_SET
    &END
  &END

  &AE_BASIS
     BASIS_TYPE GEOMETRICAL_GTO
  &END AE_BASIS
  &PP_BASIS
     BASIS_TYPE SLATER
     NUM_SLATER 1 1 0 0
     S_EXPONENTS 1.6083
     S_QUANTUM_NUMBERS 2
     P_EXPONENTS 1.5679
     P_QUANTUM_NUMBERS 2
  &END PP_BASIS
  &POTENTIAL
    PSEUDO_TYPE GTH
    &GTH_POTENTIAL
    2    2    0    0
    0.350000000       2   -9.000000000    1.500000000
       1
    0.300000000       1    9.000000000
    &END
  &END POTENTIAL

  &POWELL
     ACCURACY   1.e-8
     STEP_SIZE  1.0
     WEIGHT_PSIR0   0.1
  &END

&END ATOM

