&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL
&ATOM
  ELEMENT Li

  RUN_TYPE BASIS_OPTIMIZATION

  ELECTRON_CONFIGURATION CORE 2s1 
  CORE [He]
  MAX_ANGULAR_MOMENTUM 0

  &METHOD
     METHOD_TYPE  KOHN-SHAM
     &XC
       &XC_FUNCTIONAL
         &PBE
         &END
       &END XC_FUNCTIONAL
     &END XC
  &END METHOD
  &POTENTIAL
    PSEUDO_TYPE GTH
    POTENTIAL_NAME GTH-PADE-q1
  &END POTENTIAL
  &OPTIMIZATION
    EPS_SCF 1.e-12
  &END 

  &PP_BASIS
     BASIS_TYPE SLATER
     NUM_SLATER 1 0 0 0
     S_EXPONENTS  0.7
     S_QUANTUM_NUMBERS  2
  &END PP_BASIS

  &POWELL
     ACCURACY   1.e-14
     STEP_SIZE  0.1
  &END
&END ATOM
