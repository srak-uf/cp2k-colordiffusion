&GLOBAL
  PROGRAM_NAME ATOM
&END GLOBAL
&ATOM
  ELEMENT Ar

  RUN_TYPE BASIS_OPTIMIZATION

  ELECTRON_CONFIGURATION 1s2 2s2 2p6 3s2 3p6 
  MAX_ANGULAR_MOMENTUM 1

  &METHOD
     METHOD_TYPE  HARTREE-FOCK
  &END METHOD
  &OPTIMIZATION
    EPS_SCF 1.e-12
  &END 

   &AE_BASIS
     BASIS_TYPE SLATER
     NUM_SLATER 3 2 0 0
     S_EXPONENTS  17. 6. 2.5
     S_QUANTUM_NUMBERS 1 2 3
     P_EXPONENTS  7.0 2.0
     P_QUANTUM_NUMBERS  2 3
   &END AE_BASIS

  &POWELL
     ACCURACY   1.e-14
     STEP_SIZE  0.1
  &END
&END ATOM
