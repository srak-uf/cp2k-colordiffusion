&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      &BOND
        ATOMS Si O
        KIND HARMONIC
        K 0.5
        R0 [angstrom] 1.59
      &END BOND
      
      &BEND
        ATOMS Si O Si
        KIND HARMONIC
        K 0.0
        THETA0 0.0
      &END BEND
      &BEND
        ATOMS O Si O
        KIND HARMONIC
        K 0.0
        THETA0 0.0
      &END BEND
      
      &CHARGE
        ATOM Si
        CHARGE 0.0
      &END CHARGE
      &CHARGE
        ATOM O
        CHARGE 0.0
      &END CHARGE
      &SPLINE
        R0_NB 0.1
      &END SPLINE
      &NONBONDED
        &GENPOT
          ATOMS Si Si 
          FUNCTION 0.0
          VARIABLES r
        &END GENPOT
        &GENPOT
          ATOMS Si O
          FUNCTION 0.0
          VARIABLES r
        &END GENPOT
        &GENPOT
          ATOMS O O
          FUNCTION 0.0
          VARIABLES r
        &END GENPOT
      &END NONBONDED
    &END FORCEFIELD
    
    &POISSON
      &EWALD
        GMAX 25
      &END EWALD
    &END POISSON
    &PRINT
      &SUBCELL
      &END SUBCELL
      #&NEIGHBOR_LISTS
      #&END NEIGHBOR_LISTS
      &FF_INFO  DEBUG
      &END FF_INFO
    &END PRINT
  &END MM
  &SUBSYS
    &CELL
      ABC 20.413734  19.904612  13.453377
    &END CELL
    &TOPOLOGY
        COORDINATE XYZ
        COORD_FILE_NAME ../sample_xyz/mfi.xyz
        &GENERATE
            CREATE_MOLECULES T
        &END GENERATE
    &END TOPOLOGY
    &PRINT
        #&INTERATOMIC_DISTANCES
        #&END INTERATOMIC_DISTANCES
        #&TOPOLOGY_INFO
        #    XYZ_INFO T
        #    GENERATE_INFO F
        #&END TOPOLOGY_INFO
        #&KINDS
        #&END KINDS
    &END PRINT
  &END SUBSYS
  &PRINT
    &FORCES
    &END FORCES
  &END PRINT
&END FORCE_EVAL
&GLOBAL
  PROJECT mfi_geo2
  RUN_TYPE GEO_OPT
  SAVE_MEM
&END GLOBAL
&MOTION
  &GEO_OPT
    MINIMIZER CG
    MAX_ITER 4
  &END GEO_OPT
  &PRINT
    &TRAJECTORY
       &EACH
         MD 1
       &END
       FORMAT DCD
    &END
  &END
&END MOTION
