      &ENERGY
      &END
      &SHELL_ENERGY LOW
      &END
    &END PRINT
  &END MD
  &PRINT
    &TRAJECTORY
    &END
    &VELOCITIES
      &EACH
        MD 1000
      &END
    &END
    &SHELL_TRAJECTORY LOW
      &EACH
        MD 1
      &END
    &END
    &SHELL_VELOCITIES LOW
      &EACH
        MD 200
      &END
    &END
    &SHELL_FORCES LOW
