    &END WILLIAMS
   &END NONBONDED
   &SPLINE
    EMAX_ACCURACY [hartree] 0.02
    EMAX_SPLINE [hartree] 1.0E4
    EPS_SPLINE [hartree] 1.0E-7
    R0_NB [angstrom] 0.1
   &END SPLINE
  &END FORCEFIELD
  &POISSON
   &EWALD
    EWALD_TYPE spme
    ALPHA [angstrom^-1] 0.35
    GMAX 32 32 32
    &RS_GRID
     DISTRIBUTION_TYPE automatic
    &END RS_GRID
   &END EWALD
  &END POISSON
  &PRINT
   &FF_INFO OFF
    SPLINE_DATA
    SPLINE_INFO
   &END FF_INFO
  &END PRINT
 &END MM
 &PRINT
  &FORCES off
  &END FORCES
  &GRID_INFORMATION
  &END GRID_INFORMATION
  &PROGRAM_RUN_INFO
   &EACH
