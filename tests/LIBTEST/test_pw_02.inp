&GLOBAL
  PROJECT test_pw_02
  PRINT_LEVEL MEDIUM
  PROGRAM_NAME TEST
  RUN_TYPE NONE
  &TIMINGS
     THRESHOLD 0.00000000001
  &END
&END GLOBAL
&TEST
@SET SIZE1 25
@SET SIZE2 25
@SET SIZE3 25
  &PW_TRANSFER
     GRID ${SIZE1} ${SIZE2} ${SIZE3}
     N_LOOP 10
     PW_GRID_BLOCKED FALSE
     PW_GRID_LAYOUT_ALL
     PW_GRID NS-FULLSPACE
  &END
  &PW_TRANSFER
     GRID ${SIZE1} ${SIZE2} ${SIZE3}
     N_LOOP 10
     PW_GRID_BLOCKED TRUE
     PW_GRID_LAYOUT_ALL
     PW_GRID NS-FULLSPACE
  &END
&END
