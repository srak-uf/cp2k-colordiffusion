 &GLOBAL
   PROJECT_NAME              centroid_velocity_init
   RUN_TYPE                  PINT
   PRINT_LEVEL               LOW
 &END GLOBAL

 &MOTION
   &PINT
     P                       8
     PROC_PER_REPLICA        1
     NUM_STEPS              10
     DT                      1.0
     TEMP                  300.0
     NRESPA                 10
     &NOSE
       NNOS                  4
     &END NOSE
     &INIT
       VELOCITY_SCALE        T
     &END INIT
   &END PINT
 &END MOTION

 &FORCE_EVAL
   METHOD FIST
   &MM
     &FORCEFIELD
       parm_file_name ../Fist/sample_pot/water.pot
       parmtype       CHM
       &CHARGE
         ATOM OT
         CHARGE -0.8476
       &END CHARGE
       &CHARGE
         ATOM HT
         CHARGE 0.4238
       &END CHARGE
     &END FORCEFIELD
     &POISSON
       &EWALD
         EWALD_TYPE spme
         ALPHA .44
         GMAX 24
         O_SPLINE 6
       &END EWALD
     &END POISSON
   &END MM
   &SUBSYS
     &CELL
       ABC 24.955 24.955 24.955
     &END CELL
     &TOPOLOGY
       COORD_FILE_NAME ../Fist/sample_pdb/water_2.pdb
       COORD_FILE_FORMAT PDB
     &END TOPOLOGY
     &VELOCITY
       PINT_UNIT angstrom*au_t^-1
         -0.0001703635        0.0001057879       -0.0001039065
         -0.0013286679        0.0009794322       -0.0005052689
         -0.0000130060        0.0003866107        0.0011277453
          0.0000000000        0.0000000000        0.0000000000
          0.0000000000        0.0000000000        0.0000000000
          0.0000000000        0.0000000000        0.0000000000
     &END VELOCITY
   &END SUBSYS
 &END FORCE_EVAL
