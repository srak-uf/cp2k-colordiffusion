#CPQA DEPENDS he32_only.inp

&GLOBAL
  PROJECT_NAME               he32_only
  RUN_TYPE                   PINT
  PRINT_LEVEL                MEDIUM
&END GLOBAL

&MOTION
  &PINT
    NUM_STEPS                5
    &HELIUM
      HELIUM_ONLY
      POTENTIAL_FILE_NAME    lj-test-pot.dat
      NATOMS                32
      NBEADS                25
      NUM_ENV                2
      INOROT               200
      IROT                 100
      SAMPLING_METHOD        CEPERLEY
      &CEPERLEY
        BISECTION              8
        MAX_PERM_CYCLE         4
      &END CEPERLEY
      PERIODIC               T
      CELL_SHAPE             OCTAHEDRON
    &END HELIUM
  &END PINT
&END MOTION

&FORCE_EVAL
  METHOD  FIST
  &MM
    &POISSON
      &EWALD
        GMAX 25
      &END EWALD
    &END POISSON
    &FORCEFIELD
      PARM_FILE_NAME         ../Fist/sample_pot/water.pot
      PARMTYPE               CHM
      &CHARGE
        ATOM    OT
        CHARGE -0.8476
      &END CHARGE
      &CHARGE
        ATOM    HT
        CHARGE  0.4238
      &END CHARGE
    &END FORCEFIELD
  &END MM
  &SUBSYS
    &CELL
      ABC  8.0 8.0 8.0
      PERIODIC  NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME        ../Fist/sample_pdb/water_1.pdb
      COORD_FILE_FORMAT      PDB
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&EXT_RESTART
  RESTART_FILE_NAME         he32_only-1.restart
  RESTART_DEFAULT           F
  RESTART_COUNTERS
  RESTART_HELIUM_POS
  RESTART_HELIUM_PERMUTATION
  RESTART_HELIUM_RNG
&END EXT_RESTART
