&GLOBAL
  PROJECT hex-ice-defect 
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &DFT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    &QS
      ALMO_SCF T
      EPS_DEFAULT 1.0E-8 ! 1.0E-12
    &END QS
    
    &ALMO_SCF
      EPS_FILTER                 1.0E-8
      ALMO_ALGORITHM             PCG
      ALMO_SCF_GUESS             MOLECULAR

     &ALMO_OPTIMIZER_PCG
        MAX_ITER                 50
        EPS_ERROR                5.0E-4
        CONJUGATOR               POLAK_RIBIERE
        PRECONDITIONER           DEFAULT
        LIN_SEARCH_EPS_ERROR     5.0E-2
        LIN_SEARCH_STEP_SIZE_GUESS 0.2
        MAX_ITER_OUTER_LOOP      0
      &END

      DELOCALIZE_METHOD          XALMO_1DIAG
      XALMO_R_CUTOFF_FACTOR      1.6
      
    &END ALMO_SCF
    
    ! The SCF section controls calculations
    ! on single molecules
    &SCF
      EPS_SCF   1.0E-2
      SCF_GUESS ATOMIC
      MAX_SCF   40
      &OT
        PRECONDITIONER FULL_ALL
      &END
    &END SCF
    &MGRID
      CUTOFF 200 ! 320
      NGRIDS 5
    &END MGRID
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
@INCLUDE 'ice.cell'
      MULTIPLE_UNIT_CELL 1 1 1 
    &END CELL
    &TOPOLOGY
      MULTIPLE_UNIT_CELL 1 1 1
    &END
    &COORD
@INCLUDE 'ice-cut.xyz'
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH 
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

