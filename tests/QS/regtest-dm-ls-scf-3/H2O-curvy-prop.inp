@SET NREP 1
&FORCE_EVAL
  ! print forces
  &PRINT
    &FORCES
    &END
  &END
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      LS_SCF
      &DISTRIBUTION
        BASIC_OPTIMIZATION .FALSE.
        BASIC_SPATIAL_OPTIMIZATION .TRUE.
      &END
    &END QS
    &LS_SCF
      MAX_SCF    20
      EPS_FILTER 1.0E-7
      EPS_SCF    1.0E-7
      MU        -0.20
      MIXING_FRACTION 0.45
      S_PRECONDITIONER NONE
      REPORT_ALL_SPARSITIES OFF
      PERFORM_MU_SCAN OFF
      PURIFICATION_METHOD TRS4
      &CURVY_STEPS
      &END
      ! test cheby
      &CHEBYSHEV
        N_CHEBYSHEV 100
        &DOS
           N_GRIDPOINTS 100
        &END
      &END
    &END
    &SCF
      MAX_SCF    30
      EPS_SCF    1.0E-5
      &PRINT
        &RESTART OFF
        &END
      &END
    &END
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &MULLIKEN
      &END
    &END
  &END DFT
  &SUBSYS
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END
    &CELL
      ABC 9 9 9
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    # 32 H2O (TIP5P,1bar,300K) a = 9.8528
    &COORD
   O       2.280398       9.146539       5.088696 H2O
   H       1.762019       9.820429       5.528454 H2O
   H       3.095987       9.107088       5.588186 H2O
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT ECUBE
  RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL MEDIUM
  &TIMINGS
     THRESHOLD 0.000001
  &END
  ! EXTENDED_FFT_LENGTHS ! enable for large systems and FFTW
&END GLOBAL
