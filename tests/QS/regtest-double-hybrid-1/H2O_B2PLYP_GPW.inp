&GLOBAL                                                                                           
  PROJECT  H2O_gpw
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
     THRESHOLD 0.01
  &END
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  HFX_BASIS
    POTENTIAL_FILE_NAME  POTENTIAL
    &MGRID
      CUTOFF  200
      REL_CUTOFF  25
    &END MGRID
    &POISSON
      PERIODIC NONE
      ! POISSON_SOLVER MT
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-5
      MAX_SCF 100
      ADDED_MOS 15000 15000
    &END SCF
! Parameters for the B2PLYP double hybrid functional (ax=0.53  ac=0.27)
    &XC
      &XC_FUNCTIONAL
       &LYP
         SCALE_C  0.73
       &END
       &BECKE88
         SCALE_X   0.47
       &END
      &END XC_FUNCTIONAL
      &HF
        FRACTION   0.53
        &SCREENING
          EPS_SCHWARZ 1.0E-8
          SCREEN_ON_INITIAL_P FALSE 
        &END SCREENING
      &END HF
      &WF_CORRELATION
       METHOD  MP2_GPW
       &WFC_GPW
         CUTOFF  200
         REL_CUTOFF 25
       &END
       ! METHOD DIRECT_CANONICAL
       ! &DIRECT_CANONICAL
       !   BIG_SEND
       ! &END
        SCALE_T  0.27
        SCALE_S  0.27
        MEMORY  1500.
        NUMBER_PROC  1
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom] 7.0 7.0 7.0 
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET  DZVP-GTH
      POTENTIAL  GTH-HF-q1
    &END KIND
    &KIND O
      BASIS_SET  DZVP-GTH
      POTENTIAL  GTH-HF-q6
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  H2O_gas.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
