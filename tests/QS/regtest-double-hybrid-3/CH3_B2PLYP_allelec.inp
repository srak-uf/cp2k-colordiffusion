&GLOBAL                                                                                           
  PROJECT  CH3_allelec_B2PLYP
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
     THRESHOLD 0.01
  &END
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF  300
      REL_CUTOFF  50
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
      METHOD GAPW
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-6
      MAX_SCF 100
    &END SCF
! Parameters for the B2PLYP double hybrid functional (ax=0.53  ac=0.27)
    &XC
      &XC_FUNCTIONAL
       &LYP
         SCALE_C  0.73
       &END
       &BECKE88
         SCALE_X   0.47
       &END
      &END XC_FUNCTIONAL
      &HF
        FRACTION   0.53
        &SCREENING
          EPS_SCHWARZ 1.0E-8
          SCREEN_ON_INITIAL_P FALSE 
        &END SCREENING
      &END HF
      &WF_CORRELATION
        METHOD DIRECT_CANONICAL
        &DIRECT_CANONICAL
          BIG_SEND
        &END
        SCALE_T  0.27
        SCALE_S  0.27
        MEMORY  1000.
        NUMBER_PROC  1
      &END
    &END XC
    UKS
    MULTIPLICITY  2
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  7.00   7.00   7.00
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET aug-cc-pVDZ
      POTENTIAL  ALL
    &END KIND
    &KIND C
      BASIS_SET aug-cc-pVDZ
      POTENTIAL  ALL
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  CH3.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

