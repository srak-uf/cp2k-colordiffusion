#CPQA DEPENDS CO.inp

&GLOBAL
 PROJECT      xes_core0.5
 IOLEVEL      MEDIUM
 RUN_TYPE     ENERGY
&END 

&FORCE_EVAL
  METHOD Quickstep

  &DFT
    LSD
    BASIS_SET_FILE_NAME ALL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    RESTART_FILE_NAME   CO-RESTART
    &XC
      &XC_FUNCTIONAL
       &BECKE88
       &END
       &LYP
       &END
      &END
    &END
    &QS
      METHOD       GAPW
      EPS_GVG      1.0E-8
      EPS_PGF_ORB  1.0E-8
      QUADRATURE   GC_LOG
      EPSFIT       1.E-4
      EPSISO       1.0E-12
      EPSRHO0      1.E-8
      LMAXN0       2
      LMAXN1       6
      ALPHA0_H     10
     &END
    &MGRID
      CUTOFF       150
      NGRIDS        4
    &END
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 5.E-6
      EPS_DIIS 0.4
      MAX_SCF 100
       
      ADDED_MOS  1 1
      &OT OFF
        PRECONDITIONER FULL_ALL
      &END OT
      &PRINT
        &TOTAL_DENSITIES MEDIUM
        &END
        &RESTART OFF
        &END
      &END
    &END SCF
   &POISSON
     POISSON_SOLVER MT
     &MT
      ALPHA 7.0
      REL_CUTOFF 1.2
     &END
     PERIODIC NONE
    &END POISSON

    &XAS 
      &SCF
        EPS_SCF 0.000001
        EPS_DIIS   0.4
        MAX_SCF    100
      &END SCF
      METHOD        TP_VAL
      DIPOLE_FORM   VELOCITY
      STATE_TYPE    1s
      STATE_SEARCH  2
      ATOMS_LIST    1
      ATOMS_LIST    2
      ADDED_MOS     20
      XES_CORE 0.5
      &LOCALIZE
      &END
      &PRINT
        &RESTART
        &END
        &XAS_SPECTRUM OFF
        &END
        &XES_SPECTRUM
        &END
      &END
    &END
  &END SECTION DFT
  &SUBSYS
    &CELL
       ABC    6.0    6.0     6.0 
       PERIODIC NONE
    &END CELL

    &KIND O
      BASIS_SET  6-31G*
      POTENTIAL ALL
      LEBEDEV_GRID 50
      RADIAL_GRID 100
    &END

    &KIND  C
      BASIS_SET  6-31G*
      POTENTIAL  ALL
      LEBEDEV_GRID 50
      RADIAL_GRID 100
    &END

    &COORD
      C         0.000000    0.000000   -0.004108
      O        0.000000    0.000000    1.132332
    &END
  &END SUBSYS
&END FORCE_EVAL
