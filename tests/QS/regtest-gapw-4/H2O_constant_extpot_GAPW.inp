&GLOBAL
  RUN_TYPE ENERGY
  PROJECT_NAME H2O_constant_extpot
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER PERIODIC
    &END POISSON
    &EXTERNAL_POTENTIAL
      FUNCTION A
      VALUES [eV] 5.0
      PARAMETERS A
    &END EXTERNAL_POTENTIAL
    &SCF
      MAX_SCF 10
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &MGRID
      CUTOFF 100
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
  &END DFT
  &SUBSYS
    &COORD
      H 4.0 3.242864 4.293066
      H 4.0 4.757136 4.293066
      O 4.0 4.0 3.706934
    &END COORD
    &CELL
      A 8.0 0.0 0.0
      C 0.0 0.0 8.0
      B 0.0 8.0 0.0
      PERIODIC XYZ
    &END CELL
    &KIND H
      POTENTIAL GTH-PBE-q1
      ELEMENT H
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
    &KIND O
      POTENTIAL GTH-PBE-q6
      ELEMENT O
      BASIS_SET DZVP-MOLOPT-SR-GTH
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
