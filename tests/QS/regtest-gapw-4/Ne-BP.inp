&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 50
      REL_CUTOFF 40
    &END MGRID
    &QS
      METHOD GAPW
      EPS_DEFAULT 10E-14
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      MAX_SCF 1
    &END SCF
    &XC
      &XC_FUNCTIONAL BP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 12.0 12.0 12.0
    &END CELL
    &COORD
      Ne 0.0 0.0 0.0
    &END COORD
    &KIND Ne
      BASIS_SET aug-cc-pV5Z
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT Ne-BP
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL
