&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
      NGRIDS 5
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
      METHOD GAPW
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 3.0E-6
      MAX_SCF 3
      &OT
         MINIMIZER DIIS
         PRECONDITIONER FULL_ALL
         ENERGY_GAP 0.001
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL TPSS
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
    Be   0.000000    0.000000    0.000000
    &END COORD
    &KIND Be
      POTENTIAL ALL
      BASIS_SET DZV-ALL-PADE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT Be_GAPW
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
