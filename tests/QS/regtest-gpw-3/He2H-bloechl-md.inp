&FORCE_EVAL
  METHOD Quickstep
  &DFT
    CHARGE 0
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME FAKE_POTENTIAL
    &MGRID
      CUTOFF 100
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MULTIPOLE
      &MULTIPOLE
        RCUT 20.0
        ANALYTICAL_GTERM
      &END MULTIPOLE
    &END POISSON
    &QS
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
    &END CELL
    &COORD
    H   3.0000  3.0000  3.2000
    He  3.0000  3.0000  6.8000
    H   5.0000  5.0000  7.0000 
    &END COORD
    &KIND H
      BASIS_SET DZV-GTH-PADE
      POTENTIAL GTH-PADE-ANTYMATTER-q1
    &END KIND
    &KIND He
      BASIS_SET DZV-GTH-PADE
      POTENTIAL GTH-PADE-q2
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT He2H-bloechl-md
  RUN_TYPE MD
  PRINT_LEVEL MEDIUM
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 2
    TIMESTEP 0.1
    TEMPERATURE 300.0
  &END MD
&END MOTION
