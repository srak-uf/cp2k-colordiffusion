&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-8
    &END QS
    &SCF
      MAX_SCF 3
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
      &vdW_POTENTIAL
         DISPERSION_FUNCTIONAL PAIR_POTENTIAL
         &PAIR_POTENTIAL
            TYPE DFTD2
            SCALING 1.0e0
         &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
    &END CELL
#
# ghost atoms should be allowed to be at identical locations as other atoms
# furthermore, they should not have vdw interactions with other atoms
#
    &TOPOLOGY
     CONN_FILE_FORMAT OFF 
    &END
    &COORD
   O     0.000000     0.000000     0.000000
   H     0.000000     0.000000     1.000000
   H     0.942809     0.000000    -0.333333
   O_ghost     0.000000     0.000000     0.000000
   H_ghost     0.000000     0.000000     1.000000
   H_ghost     0.942809     0.000000    -0.333333
    &END COORD
    &KIND H_ghost
      BASIS_SET SZV-GTH-PADE
      GHOST
    &END KIND
    &KIND O_ghost
      BASIS_SET SZV-GTH-PADE
      GHOST
    &END KIND
    &KIND H
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT ghost_overlap_vdw
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
