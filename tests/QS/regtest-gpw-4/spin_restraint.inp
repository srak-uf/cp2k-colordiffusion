&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    CHARGE +1
    LSD
    &MGRID
      CUTOFF 80
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      MAP_CONSISTENT
      &DDAPC_RESTRAINT
        ATOMS   1 
        TARGET -1.0
        STRENGTH 5.0
        TYPE_OF_DENSITY SPIN
      &END
    &END QS
    &SCF
      MAX_SCF 7
      EPS_SCF 1.0E-7
      SCF_GUESS ATOMIC
      &OT
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
    &DENSITY_FITTING
    &END  
    &PRINT
     &MULLIKEN
     &END
    &END
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 10.0
    &END CELL
    &COORD
    He   0.000000   0.0   0.0
    He   0.000000   0.0   3.0
    &END COORD
    &KIND He
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q2
    &END KIND
  &END SUBSYS
  &PROPERTIES
    &FIT_CHARGE
    &END
  &END
&END FORCE_EVAL
&GLOBAL
  PROJECT spin_restraint
  RUN_TYPE MD
  ! RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 3
    TIMESTEP 0.4
    TEMPERATURE 300.0
  &END MD
&END MOTION
