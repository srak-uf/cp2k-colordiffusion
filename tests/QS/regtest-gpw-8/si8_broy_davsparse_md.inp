&GLOBAL
  PROJECT  si8_broy_davsparse_md
  PRINT_LEVEL MEDIUM
  RUN_TYPE MD
  FLUSH_SHOULD_FLUSH
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &PRINT
    &FORCES ON
    &END
  &END
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      NGRIDS 4
      CUTOFF 40
    &END MGRID
    &QS
      METHOD GPW
      MAP_CONSISTENT
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 2
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF   5
      EPS_SCF 1.0e-5
      CHOLESKY INVERSE
      &DIAGONALIZATION
        ALGORITHM DAVIDSON
        MAX_ITER 1
        EPS_ITER 1.e-4
        &DAVIDSON
           ENERGY_GAP  0.2
           NEW_PREC_EACH 20
#           FIRST_PREC 2
           PRECONDITIONER FULL_ALL
           CONV_MOS_PERCENT 0.8
           SPARSE_MOS .TRUE.
        &END
      &END DIAGONALIZATION

      &SMEAR
        METHOD FERMI_DIRAC 
        ELECTRONIC_TEMPERATURE   300.
      &END
      &MIXING
          METHOD BROYDEN_MIXING
          ALPHA   0.6
          BETA   1.0
          NBROYDEN 15
      &END
      ADDED_MOS   20  
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &MO
        &EACH
          QS_SCF 100
        &END
        EIGENVALUES
        OCCUPATION_NUMBERS
      &END
##      &MO_CUBES
##        NHOMO  64
##        NLUMO 20
##        WRITE_CUBE F
##      &END
    &END
  &END DFT

  &SUBSYS
    &CELL
       ABC   5.42858871335 5.42858871335 5.42858871335
    &END CELL

    &KIND  Si
      BASIS_SET  DZVP-GTH
      POTENTIAL  GTH-PBE-q4
    &END

    &TOPOLOGY
      COORD_FILE_NAME ../sample_xyz/SI_8.xyz 
      COORDINATE XYZ
      CONNECTIVITY OFF
    &END TOPOLOGY

  &END SUBSYS
&END FORCE_EVAL

&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 1
    TIMESTEP 0.5
    TEMPERATURE 300.0
  &END
&END


