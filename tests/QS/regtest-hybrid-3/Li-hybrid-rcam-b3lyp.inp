&FORCE_EVAL
  METHOD Quickstep
  &DFT
    LSD
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200 
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GAPW
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END
    &SCF
      &OT on
       PRECONDITIONER FULL_ALL
       MINIMIZER DIIS
      &END OT
      EPS_SCF 1.0E-8
      SCF_GUESS ATOMIC 
      MAX_SCF 20
    &END SCF
    &XC
      &XC_FUNCTIONAL
        &BECKE88
          SCALE_X 0.95238
        &END
        &BECKE88_LR
          OMEGA 0.33
          SCALE_X -0.94979
        &END
        &LYP
          SCALE_C 1.0
        &END
        &XALPHA
          SCALE_X -0.13590
        &END
      &END XC_FUNCTIONAL
      &HF
       &SCREENING
         EPS_SCHWARZ 1.0E-10
       &END
       &MEMORY
         MAX_MEMORY 100
       &END
       &INTERACTION_POTENTIAL
         POTENTIAL_TYPE MIX_CL 
         OMEGA 0.33
         SCALE_LONGRANGE 0.94979
         SCALE_COULOMB 0.18352
       &END
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      Li   0.0   0.0   0.0
    &END COORD
    &KIND Li
      BASIS_SET 6-31Gxx
      POTENTIAL ALL
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT Li-hybrid-rcam-b3lyp
  PRINT_LEVEL MEDIUM 
  RUN_TYPE ENERGY_FORCE
&END GLOBAL
