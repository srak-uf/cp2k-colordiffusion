@SET NREP 1
&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 120
      REL_CUTOFF 30
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION USE_GUESS
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      MAX_SCF  50
      &MIXING
          METHOD DIRECT_P_MIXING
          ALPHA   0.50
      &END
      ADDED_MOS 200
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
    &KPOINTS
       SCHEME  MONKHORST-PACK  2 2 2
       SYMMETRY ON 
       EPS_GEO 1.e-8
       FULL_GRID ON 
       VERBOSE F
       PARALLEL_GROUP_SIZE  0
    &END KPOINTS
  &END DFT
  &SUBSYS
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END
    &CELL
      ABC 5.00000 5.00000 5.00000
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END CELL
    &COORD
     SCALED
     Ar    0.000000    0.000000    0.000000
     Ar    0.450000    0.550000    0.490000
    &END COORD
    &KIND Ar
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PADE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT Ar
  PRINT_LEVEL LOW
  RUN_TYPE DEBUG 
&END GLOBAL
&DEBUG
  DEBUG_FORCES          T
  DEBUG_STRESS_TENSOR   T
  STOP_ON_MISMATCH      T
  DX 0.001
&END DEBUG

