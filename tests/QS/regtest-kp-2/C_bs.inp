&GLOBAL
  PROJECT C_bs
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL

&FORCE_EVAL  
 METHOD Quickstep
 &DFT 
  BASIS_SET_FILE_NAME BASIS_MOLOPT
  POTENTIAL_FILE_NAME GTH_POTENTIALS
  &MGRID 
    CUTOFF 100
  &END MGRID
  &QS 
       EPS_DEFAULT 1.0E-08
       EXTRAPOLATION USE_GUESS
  &END QS
  &SCF
     SCF_GUESS  ATOMIC
     EPS_SCF 1.0E-6
     MAX_SCF 1
     ADDED_MOS  2
     CHOLESKY INVERSE
     &SMEAR  ON
         METHOD FERMI_DIRAC
         ELECTRONIC_TEMPERATURE [K] 30
     &END SMEAR
     &DIAGONALIZATION
          ALGORITHM STANDARD
     &END DIAGONALIZATION
     &MIXING
          METHOD BROYDEN_MIXING
          ALPHA   0.1
          BETA    1.5
          NBROYDEN  8
     &END
  &END SCF
  &XC
    &XC_FUNCTIONAL LDA
    &END XC_FUNCTIONAL
  &END XC
  &KPOINTS
     SCHEME  GENERAL
     SYMMETRY OFF
     FULL_GRID ON 
     PARALLEL_GROUP_SIZE  0
     KPOINT   0.341666666667 0.3166666666667 0.0   1.
     KPOINT   0.333333333333 0.3333333333333 0.0   1.
     KPOINT   0.32           0.32            0.0   1.
  &END KPOINTS
  &PRINT
      &MO
          EIGENVALUES .TRUE.
          &EACH
              QS_SCF 0
          &END
          ADD_LAST numeric
      &END MO
  &END PRINT
  &END DFT
   &SUBSYS
      &COORD
         C   0.0000   0.0000000   0.0000    
         C   0.0000   1.4252366   0.0000
      &END COORD
      &CELL
         PERIODIC XYZ
         A  2.46857000  0.00000000  0.0000
         B -1.23428500  2.13784433  0.0000
         C  0.00000000  0.00000000  15.0
      &END CELL
      &KIND C
         BASIS_SET DZVP-MOLOPT-GTH
         POTENTIAL GTH-PBE
      &END KIND
   &END SUBSYS
&END FORCE_EVAL 
