&GLOBAL
  PROJECT H2_tz2p_lri_diag
  RUN_TYPE ENERGY
  PRINT_LEVEL low
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
  CHARGE 0
    BASIS_SET_FILE_NAME BASIS_LRI
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      NGRIDS 1
      CUTOFF 280
    &END MGRID
    &POISSON
       PERIODIC NONE
       POISSON_SOLVER MT
    &END
    &QS
      METHOD LRIGPW
      &LRIGPW
        SHG_LRI_INTEGRALS .FALSE. 
      &END
    &END QS
    &SCF
      SCF_GUESS atomic
      MAX_SCF 3
      EPS_SCF 1.0E-6
      &DIAGONALIZATION
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 8.0
      PERIODIC NONE
    &END CELL
    &COORD
 H     0.000000     0.000000     0.000000
 H     0.000000     0.000000     1.008000
    &END COORD
    &TOPOLOGY
     &CENTER_COORDINATES
     &END
    &END
    &KIND H
      BASIS_SET ORB adf_tz2p_basis
      POTENTIAL GTH-PADE-q1
      BASIS_SET LRI_AUX adf_tz2p_fit_basis 
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
