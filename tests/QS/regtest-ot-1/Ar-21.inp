#CPQA DEPENDS Ar-20.inp

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    RESTART_FILE_NAME Ar20-RESTART.wfn
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-10
    &END QS
    &SCF
      MAX_SCF 5
      SCF_GUESS RESTART
      &OT ON
        LINESEARCH 3PNT
        MINIMIZER SD
        PRECONDITIONER FULL_SINGLE
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 5.0 6.0
    &END CELL
    &COORD
    Ar     0.000000  0.000000  0.000000
    &END COORD
    &KIND Ar
      BASIS_SET DZVP-GTH-BLYP
      POTENTIAL GTH-BLYP-q8
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL

  PRINT_LEVEL MEDIUM
&END GLOBAL
