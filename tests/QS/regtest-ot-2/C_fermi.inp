&GLOBAL
  PROJECT C_fermi
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
  BASIS_SET_FILE_NAME BASIS_SET
  POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 100
    &END MGRID
    &PRINT
      &MO
        EIGENVALUES
        EIGENVECTORS
        MO_INDEX_RANGE 2 5
        NDIGITS 8
      &END MO
    &END PRINT
    &QS
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      &SMEAR
         METHOD FERMI_DIRAC
         ELECTRONIC_TEMPERATURE 300
      &END
      SCF_GUESS ATOMIC
      ADDED_MOS 4
      EPS_SCF 1.0E-5
      MAX_SCF 50
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
    C   0.000000  0.000000  0.000000
    &END COORD
    &KIND C
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q4
    &END KIND
  &END SUBSYS
  &PRINT  
    &GRID_INFORMATION ON
    &END
  &END
&END FORCE_EVAL
