&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &PRINT
      &MO_CUBES 
        NHOMO 1
        WRITE_CUBE FALSE
      &END
    &END
    &LOCALIZE
      &PRINT
        &MOLECULAR_STATES
        &END
      &END
    &END
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION PS 
      EXTRAPOLATION_ORDER 2
      MAP_CONSISTENT
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      MAX_SCF 3
      &OT
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 12.0 6.0 6.0
    &END CELL
    &COORD
    O   0.000000    0.000000   -0.065587 H2O
    H   0.000000   -0.757136    0.520545 H2O
    H   0.000000    0.757136    0.520545 H2O
    O   4.000000    0.000000   -0.065587 H2O
    H   4.000000   -0.757136    0.520545 H2O
    H   4.000000    0.757136    0.520545 H2O
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &TOPOLOGY
      CONNECTIVITY GENERATE
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&MOTION
 &GEO_OPT
  OPTIMIZER BFGS
  MAX_ITER 2
 &END
&END
&GLOBAL
  PROJECT H2O-geo-ot-mols
  PRINT_LEVEL MEDIUM
  RUN_TYPE GEO_OPT
&END GLOBAL
