&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &QS
      LS_SCF
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER  MT
    &END POISSON
    &LS_SCF
      MAX_SCF     25
      EPS_SCF     1.0E-8
      S_PRECONDITIONER  NONE
      REPORT_ALL_SPARSITIES OFF
      PURIFICATION_METHOD TRS4
      EXTRAPOLATION_ORDER  1
      &PAO
        MAX_PAO 0
        PARAMETERIZATION ROTINV
        &MACHINE_LEARNING
          METHOD GAUSSIAN_PROCESS
          DESCRIPTOR OVERLAP
          PRIOR MEAN
          &TRAINING_SET
            H2_pao_rotinv-1_0.pao
          &END TRAINING_SET
          GP_SCALE 1.0
          GP_NOISE_VAR 0.01
          TOLERANCE 1E+10 !disable check
        &END MACHINE_LEARNING
      &END PAO
    &END
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
      O         2.6116774290        4.1629472392        4.1629480502
      H         1.8450021896        4.5850871565        4.5850871241
      H         2.2373131663        3.5277354616        3.5277353471
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      PAO_BASIS_SIZE 1
      &PAO_POTENTIAL
        MAXL 0
      &END PAO_POTENTIAL
      &PAO_DESCRIPTOR
        WEIGHT +1.0
        BETA 1.0
      &END PAO_DESCRIPTOR
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      ! disable pao for Oxygen
      &PAO_POTENTIAL
        MAXL 4
      &END PAO_POTENTIAL
      &PAO_DESCRIPTOR
        WEIGHT +1.0
        BETA 1.0
      &END PAO_DESCRIPTOR
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT H2O_hybrid_ML
  RUN_TYPE ENERGY_FORCE
&END GLOBAL
