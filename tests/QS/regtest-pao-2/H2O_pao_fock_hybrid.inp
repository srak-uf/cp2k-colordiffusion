&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &QS
      LS_SCF
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER  MT
    &END POISSON
    &LS_SCF
      MAX_SCF     25
      EPS_SCF     1.0E-8
      EPS_FILTER  1.0E-8
      S_PRECONDITIONER  NONE
      REPORT_ALL_SPARSITIES OFF
      PURIFICATION_METHOD TRS4
      EXTRAPOLATION_ORDER  1
      &PAO
        PREOPT_DM_FILE H2O_ref_LS_DM_SPIN_1_RESTART.dm
        EPS_PAO    5.0E-7
        MAX_PAO    3000
        PARAMETERIZATION FOCK
        REGULARIZATION 1.0E-5
        OPTIMIZER BFGS
        &LINE_SEARCH
          METHOD ADAPT
        &END LINE_SEARCH
      &END PAO
    &END
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
      O         2.6116774290        4.1629472392        4.1629480502
      H         1.8450021896        4.5850871565        4.5850871241
      H         2.2373131663        3.5277354616        3.5277353471
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      PAO_BASIS_SIZE 4
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      ! disable pao for Oxygen
    &END KIND
    &TOPOLOGY
       &CENTER_COORDINATES
       &END
    &END
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT H2O_pao_fock_hybrid
  RUN_TYPE ENERGY
&END GLOBAL
