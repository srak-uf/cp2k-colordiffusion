# Global settings
&GLOBAL
  ECHO_INPUT .false.
  PRINT_LEVEL low
  PROGRAM_NAME cp2k
  PROJECT_NAME furane-pbe-4A
  RUN_TYPE energy
  SAVE_MEM .true.
  WALLTIME 01:00:00
  &TIMINGS
    THRESHOLD 1.0e-3
  &END
&END GLOBAL
# Energy & forces calculation
&FORCE_EVAL
  # Electronic structure
  METHOD qs
  STRESS_TENSOR none
  # DFT settings
  &DFT
    # Basis set & pseudopotentials
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    # Charge & multiplicity
    CHARGE 1
    MULTIPLICITY 2
    SPIN_POLARIZED .true.
    # Realspace multi-grids
    &MGRID
      CUTOFF 250.0 
      REL_CUTOFF 50.0
    &END MGRID
    # QuickStep solver setting
    &QS
      EPS_DEFAULT 1.0e-8
      EXTRAPOLATION ps
      EXTRAPOLATION_ORDER 3 
      MAP_CONSISTENT .true.
    &END QS
    # SCF procedure
    &SCF
      MAX_SCF 25
      SCF_GUESS atomic
      EPS_SCF 1.0e-5
      ADDED_MOS 2
      &DIAGONALIZATION
        ALGORITHM standard
      &END DIAGONALIZATION
      &PRINT
        &RESTART off
        &END
      &END
    &END SCF
    # Exchange-correlation functional
    &XC
      &XC_FUNCTIONAL pbe
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  # Electronic coupling
  &PROPERTIES
    &ET_COUPLING
      # POD method
      &PROJECTION
        # Donor
        &BLOCK
          ATOMS  1  2  3  4  5  6  7  8  9
          NELECTRON 26
        &END BLOCK
        # Acceptor
        &BLOCK
          ATOMS 10 11 12 13 14 15 16 17 18
          NELECTRON 12
        &END BLOCK
      &END PROJECTION
    &END ET_COUPLING
  &END PROPERTIES
  # System description
  &SUBSYS
    # Cell vectors [A]
    &CELL
      ABC 10.000 10.000 10.000
      ALPHA_BETA_GAMMA 90.0 90.0 90.0
      PERIODIC xyz
    &END CELL
    # Coordinates [A]
    &COORD
