&GLOBAL                                                                                           
  PROJECT     H_atom
  PRINT_LEVEL MEDIUM
  RUN_TYPE    ENERGY
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  HFX_BASIS
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    &MGRID
      CUTOFF      300
      REL_CUTOFF   50
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
    &END QS
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-6
      MAX_SCF 100
      &PRINT
        &RESTART OFF
        &END
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &WF_CORRELATION
        METHOD  RI_RPA_GPW
        &WFC_GPW
          CUTOFF    200
          REL_CUTOFF 30
        &END
        &RI_RPA
          RPA_NUM_QUAD_POINTS  4
          MINIMAX
        &END
        MEMORY  1000.0
        NUMBER_PROC  1
        CALC_COND_NUM
      &END
    &END XC
    UKS
    MULTIPLICITY  2
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  5.0000000   5.0000000   5.0000000
    &END CELL
    &KIND H
      BASIS_SET         DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL         GTH-PBE-q1
    &END KIND
    &COORD
      H    0.0000000   0.0000000   0.0000000
    &END COORD
    &TOPOLOGY
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

