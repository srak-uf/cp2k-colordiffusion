&FORCE_EVAL
  METHOD Quickstep
  &DFT
    LSD
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 150
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 3.0E-7
      MAX_SCF 50
      ADDED_MOS 1
      &DIAGONALIZATION
         ALGORITHM STANDARD
      &END DIAGONALIZATION
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
    &REAL_TIME_PROPAGATION
       MAX_ITER 8
       MAT_EXP PADE
       EXP_ACCURACY 1.0E-9
       EPS_ITER 1.0E-9
       PROPAGATOR ETRS
       INITIAL_WFN SCF_WFN
    &END
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
    O   0.000000    0.000000   -0.065587 H2O
    H   0.000000   -0.757136    0.520545 H2O
    H   0.000000    0.757136    0.520545 H2O
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-BLYP
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-BLYP
      POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT H2O_excit_emd
  RUN_TYPE EHRENFEST_DYN
  PRINT_LEVEL MEDIUM
&END GLOBAL
&MOTION
   &MD
      STEPS 2
      TIMESTEP [au_t] 0.1
   &END
&END   
