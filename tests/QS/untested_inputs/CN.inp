
&FORCE_EVAL
  METHOD QUICKSTEP
  &DFT
    EXCITATIONS TDDFPT
    LSD
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    RESTART_FILE_NAME RESTART_CN
    &MGRID
      CUTOFF 150
      NGRIDS 4
      REL_CUTOFF 40
    &END MGRID
    &QS
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      &MIXING
        METHOD DIRECT_P_MIXING
        ALPHA 0.2
      &END
      SCF_GUESS ATOMIC
    &END SCF
    &TDDFPT
      INVERT_S Y
      KERNEL Y
      MAX_KV 60
      NEV 3
      OE_CORR NONE
      PRECOND N
      REORTHO 2
      RES_ETYPE SINGLETS
      RESTARTS 4
      &XC
        &XC_FUNCTIONAL
          &PADE
          &END PADE
        &END XC_FUNCTIONAL
      &END XC
    &END TDDFPT
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_DERIV NN10_SMOOTH
      &END XC_GRID
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
    &END CELL
    &COORD
     C 0.0 0.0 0.000
     N 0.0 0.0 1.128
    &END COORD
    &KIND C
      BASIS_SET DZVP-GTH
      LEBEDEV_GRID 70
      POTENTIAL GTH-PBE-q4
      RADIAL_GRID 50
    &END KIND
    &KIND N
      BASIS_SET DZVP-GTH
      LEBEDEV_GRID 70
      POTENTIAL GTH-PBE-q5
      RADIAL_GRID 50
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL

  PROJECT H2O
  RUN_TYPE spectra
  PRINT_LEVEL LOW
&END GLOBAL
