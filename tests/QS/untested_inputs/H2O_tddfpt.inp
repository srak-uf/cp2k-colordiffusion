
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    EXCITATIONS tddfpt
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    &MGRID
      CUTOFF 160
    &END MGRID
    &QS
    &END QS
    &SCF
      EPS_SCF 1.0E-5
      &MIXING
        METHOD DIRECT_P_MIXING
        ALPHA 0.4
      &END
      SCF_GUESS ATOMIC
    &END SCF
    &TDDFPT
      INVERT_S Y
      KERNEL Y
      MAX_KV 60
      NEV 3
      OE_CORR SAOP
      REORTHO 2
      RES_ETYPE SINGLETS
      RESTARTS 2
      &XC
        &XC_FUNCTIONAL  PBE
        &END XC_FUNCTIONAL
      &END XC
    &END TDDFPT
    &XC
      &XC_FUNCTIONAL PADE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 10.0 10.0 10.0
    &END CELL
    &COORD
    O   0.000000    0.000000   -0.065587
    H   0.000000   -0.757136    0.520545
    H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET AUG-DZVP-GTH
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET AUG-DZVP-GTH
      POTENTIAL GTH-PADE-q6
    &END KIND
    &TOPOLOGY
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL

  PROJECT H2O
  RUN_TYPE SPECTRA
  PRINT_LEVEL LOW
&END GLOBAL
